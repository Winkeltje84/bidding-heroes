
<div class="row">
  <div class="col-xs-12" class="products-container">
      <h1><%= @product.title %></h1>
      <div class="product-wrapper">
        <div class="product-image">
          <%= image_tag @product.image %>
        </div>
        <div class="product-description">
          <h2>price: <%= @product.start_price %></h2>
          <h4>size: <%= @product.size %></h4>
          <p>description: <%= @product.description %></p>
          <h1><%= link_to "Place Bid", new_product_product_negotation_path %></h2>
        </div>
      </div>
  </div>
</div>
