
<div class="row">
  <h3 style="text-align: center; font-size: 16px;">ONZE FAVORIETEN</h3>
  <div class="col-xs-12 products-container">
    <% @products.each do |product| %>
      <div class="product-wrapper">
        <div class="product-image">
          <%= link_to image_tag(product.image), product_path(product.id) %>
        </div>
        <div class="product-description-wrapper">
          <h5><%= link_to product.title, product_path(product.id) %></h5>
          <h6><%= link_to product.product_type, product_path(product.id)%></h6>

          <div class="pull-left"><%= product.size %></div>
          <div class="pull-right">
            <% if product.sold %>
              <h4>Verkocht!</h4>
            <% else %>
              <del>€<%= product.original_price %></del>
              €<%= product.start_price %>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
